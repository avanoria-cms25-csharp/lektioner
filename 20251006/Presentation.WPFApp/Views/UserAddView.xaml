<UserControl x:Class="Presentation.WPFApp.Views.UserAddView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.WPFApp.Views"
             
             xmlns:viewmodels="clr-namespace:Presentation.WPFApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:UserAddViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"  Margin="0 0 0 20">
            <TextBlock Text="{Binding Title}" />
        </StackPanel>

        <StackPanel Grid.Row="1">
            <StackPanel Margin="0 0 0 10">
                <Label Content="First Name" />
                <TextBox />
            </StackPanel>

            <StackPanel Margin="0 0 0 10">
                <Label Content="Last Name" />
                <TextBox />
            </StackPanel>

            <StackPanel Margin="0 0 0 10">
                <Label Content="E-mail" />
                <TextBox />
            </StackPanel>
        </StackPanel>

        <StackPanel  Grid.Row="2">
            <Button Command="{Binding SaveCommand}" Content="Save" Margin="0 0 0 10" />
            <Button Command="{Binding CancelCommand}" Content="Cancel" />
        </StackPanel>
    </Grid>
</UserControl>
