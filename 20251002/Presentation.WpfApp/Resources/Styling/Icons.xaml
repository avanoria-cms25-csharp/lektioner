<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >

    <Storyboard x:Key="rotate-icon">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" 
                         From="0" To="360" Duration="0:0:1" RepeatBehavior="Forever" />
    </Storyboard>
    
    
    
    <Style x:Key="icon-fan" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="#213837" />
        <Setter Property="FontFamily" Value="{StaticResource fa-solid}" />
        <Setter Property="Text" Value="&#xf863;" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform">
            <Setter.Value>
                <RotateTransform Angle="0" />
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <DataTrigger Binding="{Binding IsFanOn}" Value="True">
                <DataTrigger.EnterActions>
                    <BeginStoryboard x:Name="SpinFanIcon" Storyboard="{StaticResource rotate-icon }"  />
                    <ResumeStoryboard BeginStoryboardName="SpinFanIcon" />
                </DataTrigger.EnterActions>
            </DataTrigger>

            <DataTrigger Binding="{Binding IsFanOn}" Value="False">
                <DataTrigger.EnterActions>
                    <PauseStoryboard BeginStoryboardName="SpinFanIcon" />
                </DataTrigger.EnterActions>
            </DataTrigger>

        </Style.Triggers>
    </Style>
    
</ResourceDictionary>